<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
            </p>
        </figure>

        <div class="media-content">
        
        </div>
    </article>
</div>

<% @tweets.each do |tweet| %>
    <div class="box">
        <article class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <strong>Sample User</strong>
                <small>@email.com</small>
                <p><%= tweet.tweet%>
            </div>
        </div>
        <nav class="level">
            <div class="level-left is-mobile">
                <%= link_to tweet, class: "level-item" do%>
                    <span class="icon"><i class="fa fa-link" aria-hidden='true'></i></span>
                <% end %>
                <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                    <span class="icon"><i class="fa fa-pencil" aria-hidden='true'></i></span>
                <% end%>
                <%= link_to tweet, method: :delete, data: {confirm: "트윗을 삭제하시겠습니까"}, class: "level-item" do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden='true'></i></span>
                <% end%>
            </div>
        </nav>
    </article>
    </div>
    
<% end %>
